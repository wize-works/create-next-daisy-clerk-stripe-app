{
    "name": "@wizeworks/create-next-daisy-clerk-stripe-app",
    "version": "0.2.0",
    "description": "Scaffold a Next.js app with DaisyUI, Clerk, and Stripe subscriptions in minutes.",
    "author": "WizeWorks",
    "bin": {
        "create-next-daisy-clerk-stripe-app": "dist/index.js"
    },
    "main": "dist/index.js",
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wizeworks/create-next-daisy-clerk-stripe-app.git"
    },
    "homepage": "https://github.com/wizeworks/create-next-daisy-clerk-stripe-app",
    "bugs": {
        "url": "https://github.com/wizeworks/create-next-daisy-clerk-stripe-app/issues"
    },
    "keywords": [
        "nextjs",
        "react",
        "typescript",
        "tailwind",
        "tailwindcss",
        "daisyui",
        "clerk",
        "auth",
        "authentication",
        "stripe",
        "payments",
        "subscriptions",
        "saas",
        "starter",
        "template",
        "scaffold",
        "cli",
        "create-app"
    ],
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=18.18"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json && npm run copy-templates",
        "copy-templates": "node -e \"const fs=require('fs');const path=require('path');function copyDir(src,dest){fs.mkdirSync(dest,{recursive:true});const entries=fs.readdirSync(src,{withFileTypes:true});for(const entry of entries){const srcPath=path.join(src,entry.name);const destPath=path.join(dest,entry.name);if(entry.isDirectory()){copyDir(srcPath,destPath);}else{fs.copyFileSync(srcPath,destPath);}}}copyDir('src/templates','dist/templates');\"",
        "dev": "tsx src/index.ts",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "degit": "^2.8.4",
        "kleur": "^4.1.5",
        "prompts": "^2.4.2",
        "tar": "^7.4.3"
    },
    "devDependencies": {
        "@types/node": "^22.5.0",
        "tsx": "^4.19.0",
        "typescript": "^5.6.2"
    }
}